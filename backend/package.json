{
  "name": "isms-backend",
  "version": "1.0.0",
  "description": "ISMS Application Backend",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint src --ext .ts",
    "prisma": "bash -c 'source ./scripts/prisma-env.sh && npx prisma \"$@\"' --",
    "db:migrate": "./scripts/run-prisma.sh migrate dev",
    "db:migrate:deploy": "./scripts/run-prisma.sh migrate deploy",
    "db:migrate:create": "./scripts/run-prisma.sh migrate dev --create-only",
    "db:generate": "./scripts/run-prisma.sh generate",
    "db:studio": "./scripts/run-prisma.sh studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:status": "./scripts/run-prisma.sh migrate status",
    "postinstall": "node scripts/setup-prisma-env.js"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@azure/identity": "^4.0.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@prisma/client": "^5.7.1",
    "@types/multer": "^2.0.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "libreoffice-convert": "^1.7.0",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.8",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.14.0",
    "sanitize-html": "^2.17.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "@types/pdfkit": "^0.13.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "better-sqlite3": "^12.5.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prisma": "^5.7.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
