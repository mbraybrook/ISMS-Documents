{
  "name": "isms-backend",
  "version": "1.0.0",
  "description": "ISMS Application Backend",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "db:migrate": "./scripts/run-prisma.sh migrate dev",
    "db:migrate:deploy": "./scripts/run-prisma.sh migrate deploy",
    "db:migrate:create": "./scripts/run-prisma.sh migrate dev --create-only",
    "db:generate": "./scripts/run-prisma.sh generate",
    "db:studio": "./scripts/run-prisma.sh studio",
    "db:seed": "tsx src/prisma/seed.ts",
    "db:status": "./scripts/run-prisma.sh migrate status"
  },
  "dependencies": {
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@prisma/client": "^5.7.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prisma": "^5.7.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
