# ISMS Frontend Environment Variables
# Copy this file to .env and fill in your values
# Note: Vite requires the VITE_ prefix for environment variables

# =============================================================================
# REQUIRED - API Configuration
# =============================================================================

# Backend API URL
# Development: http://localhost:4000
# Production: https://api.trust.paythru.com (or your production API URL)
VITE_API_URL=http://localhost:4000

# =============================================================================
# REQUIRED - Authentication (Azure AD / Entra ID)
# =============================================================================

# Azure AD Tenant ID (Directory ID from Azure Portal)
# Must match the backend AUTH_TENANT_ID
VITE_AUTH_TENANT_ID=

# Azure AD Application (Client) ID
# Must match the backend AUTH_CLIENT_ID
VITE_AUTH_CLIENT_ID=

# OAuth Redirect URI (must match Azure App Registration)
# Development: http://localhost:3000
# Production: https://trust.paythru.com (or your production domain)
# Must match the backend AUTH_REDIRECT_URI
VITE_AUTH_REDIRECT_URI=http://localhost:3000
